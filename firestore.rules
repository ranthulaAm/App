rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Allow read/write access to any user who is signed in.
      // In a production app, you would refine this to check for specific user IDs or roles.
      // For this portfolio app, this allows:
      // 1. Clients to create and view orders (since they must be logged in).
      // 2. Admins to view all orders (must be logged in).
      allow read, write: if request.auth != null;
    }
  }
}